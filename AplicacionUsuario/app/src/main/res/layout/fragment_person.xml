<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.asnauj.aplicacionpaciente.fragments.person.PersonFragment">


    <TextView
        android:id="@+id/nombre_paciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:textSize="18sp"
        android:text="Nombre" />

    <TextView
        android:id="@+id/apellido_paciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombre_paciente"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Apellido"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/cedula_paciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/apellido_paciente"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="1020779772"
        android:textSize="18sp" />

    <Button
        android:id="@+id/paciente_des_personales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cedula_paciente"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:text="Desiciones personales" />
</RelativeLayout>
